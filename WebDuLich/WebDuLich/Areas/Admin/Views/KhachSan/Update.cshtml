@model  WebDuLich.DB.KhachSan

@{
    ViewBag.title = "Chỉnh sửa nhà hàng: " + Model.Ten;
    int stt = 1;
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewBag.title</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
                    <li class="breadcrumb-item active">Chỉnh sửa khách sạn</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- SELECT2 EXAMPLE -->
        <div class="card card-default">
            <!-- /.card-header -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            @*<a href="/Admin/Tour/Update" class="btn btn-primary">Thêm mới</a>*@

                            <div class="card-tools">
                                <div class="input-group input-group-sm" style="width: 150px;">
                                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                                    <div class="input-group-append">
                                        <button type="submit" class="btn btn-default">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <form action="/Admin/NhaHang/Update" method="post">
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="Ten">Tên khách sạn</label>
                                    <input type="text" name="Ten" value="@Model.Ten" class="form-control" id="Ten" placeholder="Nhập khách sạn">
                                </div>
                                <div class="form-group">
                                    <label for="HinhAnh" class="form-label">Hình Ảnh</label>
                                    <div class="input-group">
                                        <div class="custom-file">
                                            <input type="text" class="custom-file-input" name="HinhAnh" value="" id="HinhAnh">
                                            <label class="custom-file-label" id="txt-HinhAnh" for="HinhAnh">@Model.HinhAnh</label>
                                        </div>
                                        <div type="button" onclick="chooseImage()" class="input-group-append">
                                            <span class="input-group-text">Upload</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="GiaCu">Giá</label>
                                    <input type="number" name="Gia" class="form-control" value="@Model.Gia" id="GiaCu" placeholder="Nhập giá">
                                </div>
                                <div class="form-group">
                                    <label for="GiaMoi">Địa chỉ</label>
                                    <input type="text" name="DiaChi" class="form-control" value="@Model.DiaChi" id="GiaMoi" placeholder="Nhập địa chỉ">
                                </div>
                                <div class="form-group">
                                    <label for="Noidung" class="form-label">Bài viết</label>
                                    <textarea class="form-control" name="Noidung" id="txtBaiViet">@Model.Noidung</textarea>
                                </div>
                                <input type="hidden" name="ID" value="@Model.ID" class="form-control">
                            </div>
                            <div class="card-footer text-right">
                                <button type="submit" class="btn btn-primary">Thêm</button>
                            </div>
                        </form>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->



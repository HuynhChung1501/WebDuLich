@model WebDuLich.Models.ModelView.TaiKhoan.MapTaiKhoanView

@{
    ViewBag.title = "Cập nhật tài khoản";
    int stt = 1;
    WebDuLich.DB.User user = Model.User;
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewBag.title</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
                    <li class="breadcrumb-item active">Cập nhật tài khoản</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- SELECT2 EXAMPLE -->
        <div class="card card-default">
            <!-- /.card-header -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-tools">
                                <div class="input-group input-group-sm" style="width: 150px;">
                                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                                    <div class="input-group-append">
                                        <button type="submit" class="btn btn-default">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <form action="/Admin/TaiKhoan/Create" method="post">
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="taikhoan">Tên tài khoản</label>
                                    <input type="text" name="UserName" class="form-control" value="@user.UserName" id="taikhoan" placeholder="Nhập tên tài khoản">
                                </div>
                                <div class="form-group">
                                    <label for="HinhAnh" class="form-label">Ảnh đại diện</label>
                                    <div class="input-group">
                                        <div class="custom-file">
                                            <input type="text" class="custom-file-input" name="Avatar" value="@user.Avatar" id="HinhAnh">
                                            <label class="custom-file-label" id="txt-HinhAnh" for="HinhAnh">@user.Avatar</label>
                                        </div>
                                        <div type="button" onclick="chooseImage()" class="input-group-append">
                                            <span class="input-group-text">Upload</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="fullName">Họ & Tên</label>
                                    <input type="text" name="FullName" class="form-control" value="@user.FullName" id="fullName" placeholder="Nhập họ tên">
                                </div>
                                <div class="form-group">
                                    <label for="sdt" class="form-label">Số điện thoại</label>
                                    <input type="number" name="SoDienThoai" class="form-control" value="@user.SoDienThoai" id="sdt" placeholder="Nhập số điện thoại">

                                </div>
                                <div class="form-group">
                                    <label for="TenTour">Trạng thái hoạt động</label>
                                    <select class="select2 w-100" name="IsActive">
                                        <option value="0">không hoạt động</option>
                                        <option value="1">Hoạt động</option>
                                    </select>
                                </div>
                            </div>
                            <div class="card-footer text-right">
                                <button type="submit" class="btn btn-primary">Thêm</button>
                            </div>
                        </form>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->


@section script

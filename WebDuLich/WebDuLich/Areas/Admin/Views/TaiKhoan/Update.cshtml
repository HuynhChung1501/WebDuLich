    <script>
        function chooseImage() {
            var finder = new CKFinder();
            finder.selectActionFunction = dienUrlVaoInput;
            finder.popup();
        }

        function dienUrlVaoInput(fileUrl) {
            $("input[name=HinhAnh]").val(fileUrl)
            $('#txt-HinhAnh').append(fileUrl);
        }


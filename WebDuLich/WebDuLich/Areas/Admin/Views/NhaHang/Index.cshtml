@model List<WebDuLich.DB.NhaHang>
@{
    ViewBag.Title = "Danh sách nhà hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";   
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewBag.title</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
                    <li class="breadcrumb-item active">Danh sách nhà hàng</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- SELECT2 EXAMPLE -->
        <div class="card card-default">
            <!-- /.card-header -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <form action="/Admin/NhaHang/TimKiem" method="post" id="SearchNhaHang" class="formSubmit">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                        <div class="row">
                                            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                                                <div class="card-toolsinput-group">
                                                    <input type="text" name="searchName" class="form-control float-right" placeholder="Search">
                                                </div>
                                            </div>
                                            <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                                                <div class="input-group-append">
                                                    <button class="btn btn-primary quickSubmit">
                                                        <i class="fas fa-search"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 text-right">
                                        <a href="/Admin/NhaHang/Create" class="btn btn-primary">Thêm mới</a>
                                        <a href="/Admin/NhaHang/ImportExcel" class="btn btn-primary">Import</a>
                                        <button class="btn btn-outline-info exportExcel" data-id="/Admin/NhaHang/ExportExcel"><i class="far fa-file-export"></i></button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body table-responsive p-0" style="height: 650px;">
                            <div id="tableForm">
                                @Html.Partial("_Detail")
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->